<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<HediffDef>
		<defName>MinersHunger</defName>
		<label>Miner's Hunger</label>
		<hediffClass>HediffWithComps</hediffClass>
		<description>Miners after work are very hungry! But their hands become clumsy and they cannt work with plants efficently.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.15</severityPerDay>
      </li>
    </comps>
		<isBad>false</isBad>
		<initialSeverity>0.1</initialSeverity>
		<stages>
			<li>
				<label>initial</label>
				<minSeverity>0.10</minSeverity>
				<lifeThreatening>false</lifeThreatening>			
				<hungerRateFactor>1.2</hungerRateFactor>
				<statOffsets>
					<PlantWorkSpeed>-0.05</PlantWorkSpeed>
					<PlantHarvestYield>-0.05</PlantHarvestYield>
				</statOffsets>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.5</minSeverity>
				<lifeThreatening>false</lifeThreatening>			
				<hungerRateFactor>1.5</hungerRateFactor>
				<statOffsets>
					<PlantWorkSpeed>-0.15</PlantWorkSpeed>
					<PlantHarvestYield>-0.15</PlantHarvestYield>
				</statOffsets>
			</li>
			<li>
				<label>advanced</label>
				<minSeverity>0.75</minSeverity>
				<lifeThreatening>false</lifeThreatening>			
				<hungerRateFactor>1.75</hungerRateFactor>
				<statOffsets>
					<PlantWorkSpeed>-0.30</PlantWorkSpeed>
					<PlantHarvestYield>-0.30</PlantHarvestYield>
				</statOffsets>
			</li>
		</stages>
		<tendable>false</tendable>
		<makesSickThought>false</makesSickThought>
		<minSeverity>0.01</minSeverity>
		<maxSeverity>1</maxSeverity>
		<displayWound>false</displayWound>
	</HediffDef>
	
</Defs>
